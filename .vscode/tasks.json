{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build WinBGIm Program",
            "type": "shell",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-std=gnu++17",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\Home\\build\\${fileBasenameNoExtension}.exe",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
